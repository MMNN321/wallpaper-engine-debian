{
    "compilerOptions": {
        "outDir": "./dist",
        "noImplicitAny": true,
        "module": "ES2015",
        "target": "es5",
        "jsx": "react",
        "allowJs": true,
        "allowSyntheticDefaultImports" : true,
        "esModuleInterop": true,
        "lib": ["DOM", "ES2015"],
        "noImplicitReturns": true,
        "moduleResolution": "node"
    },
    "include": ["./src/script/*"]
}